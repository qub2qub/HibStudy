<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="by.den.jh.advanced.inheritance.s1">

  <class
          name="by.den.jh.advanced.inheritance.s1.Employee"
          table="INHERITANCE_S1_EMPLOYEE"
          discriminator-value="EMPLOYEE">

    <id  name="id" column="EMPLOYEE_ID">
      <generator class="native"/>
    </id>

    <discriminator column="DISCRIMINATOR" type="string"/>
    
    <property name="name" column="NAME" />

    <subclass
            name="by.den.jh.advanced.inheritance.s1.Executive"
            extends="by.den.jh.advanced.inheritance.s1.Employee"
            discriminator-value="EXECUTIVE">

        <property name="role" column="ROLE"/>
    </subclass>
    
  </class>
</hibernate-mapping>
